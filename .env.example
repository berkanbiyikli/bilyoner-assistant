# ==============================================
# API Football - Futbol Verileri
# https://www.api-football.com/ adresinden alınır
# ==============================================
API_FOOTBALL_KEY=your_api_key_here
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# ==============================================
# Upstash Redis - Cache (Opsiyonel ama Önerilen)
# https://upstash.com/ adresinden ücretsiz oluşturulur
# ==============================================
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ==============================================
# Twitter/X Bot (Opsiyonel)
# https://developer.twitter.com/ adresinden alınır
# ==============================================
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ==============================================
# Public URL (Vercel'de otomatik ayarlanır)
# ==============================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ==============================================
# Bot Güvenlik (Opsiyonel)
# ==============================================
BOT_SECRET_KEY=your_secret_key_for_cron_jobs

# ==============================================
# Supabase - Auth & Database
# https://supabase.com/ adresinden ücretsiz oluşturulur
# Project Settings > API bölümünden alınır
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
