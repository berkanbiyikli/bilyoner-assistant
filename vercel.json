{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/bot/run?action=new-coupon",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/bot/run?action=value-alert",
      "schedule": "30 10 * * *"
    },
    {
      "path": "/api/bot/run?action=reminder",
      "schedule": "*/15 13-23 * * *"
    },
    {
      "path": "/api/bot/run?action=check-live",
      "schedule": "*/5 14-23 * * *"
    },
    {
      "path": "/api/bot/live",
      "schedule": "*/10 14-23 * * *"
    },
    {
      "path": "/api/bot/run?action=check-result",
      "schedule": "0 23 * * *"
    }
  ]
}
